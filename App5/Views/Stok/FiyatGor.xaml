<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldenMobileX.Views.FiyatGor">

    <ContentPage.ToolbarItems>
 
        <ToolbarItem Text="Barkod Oku"  IconImageSource="barcode.png" x:Name="BarkodOku" Clicked="BarkodOku_Clicked" />
 

    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Fiyatını görmek istediğiniz ürünün barkodunu giriniz."></Label>
            <Entry Placeholder="Barkod" x:Name="EntryBarcode" Completed="EntryBarkod_Completed" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>